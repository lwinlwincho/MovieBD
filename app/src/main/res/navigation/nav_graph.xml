<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeMovieListFragment">

    <fragment
        android:id="@+id/homeMovieListFragment"
        android:name="com.llc.moviebd.ui.home.HomeMovieListFragment"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_home_movie_list" >
        <action
            android:id="@+id/action_movieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
        <action
            android:id="@+id/action_movieListFragment_to_seeMoreFragment"
            app:destination="@id/seeMoreFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.llc.moviebd.ui.home.detail_movie.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail" >
        <argument
            android:name="movieId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/seeMoreFragment"
        android:name="com.llc.moviebd.ui.home.seeMore.SeeMoreFragment"
        android:label="fragment_movie_list_show"
        tools:layout="@layout/fragment_home_movie_list" >

        <action
            android:id="@+id/action_movieListShowFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
        <argument
            android:name="category"
            app:argType="com.llc.moviebd.ui.home.Category" />
    </fragment>

</navigation>
   <!-- com.llc.moviebd.data.model.MovieModel-->